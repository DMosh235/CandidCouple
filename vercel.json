{
    "version": 2,
    "builds": [
      {
        "src": "api/**/*.js",
        "use": "@now/node"
      }
    ],
    "routes": [
      { "src": "/api/updateImage", "dest": "api/updateImage.js" },
      { "src": "/api/getRandomImage", "dest": "api/getRandomImage.js" },
      { "src": "/(.*)", "dest": "index.html" }
    ],
    "functions": {
      "updateImage": {
        "handler": "api/updateImage.js",
        "events": [
          {
            "schedule": "cron(0 0 * * *)" 
          }
        ]
      }
    }
  }
  